[user]
	name = Vlad Alive
	email = vladalive@gmail.com

[color]
	diff = auto
	status = auto
	branch = auto
	ui = true

[rerere]
	enabled = 1

[alias]  # shortcuts
  b      = branch
  c      = checkout
  co     = commit
  d      = diff -b
  dc     = diff -b --cached
  ds     = diff -b --stat
  dst    = diff --staged
  s      = status

  cof    = commit -m 'f'
  rebim  = rebase -i master
  rebm   = rebase master
  rebi   = rebase -i

  # summary of what you're going to push
  ps     = log --pretty=oneline origin..

  # like "git log", but include the diffs
  w      = whatchanged -p

  # changes since we last did a push
  wo     = whatchanged -p origin..

  lo     = log --oneline
  lom    = log --oneline master..
  lm     = log --pretty=format:'%an | %s'
  lmd    = log --author='Vlad Alive' --since='1 day'
  lmw    = log --author='Vlad Alive' --since='1 week'
  lmm    = log --author='Vlad Alive' --since='1 month'
  lg     = log --graph --all --abbrev-commit --decorate --date=relative \
               --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'

  logsum = shortlog --numbered --summary

  g = grep --break --heading --line-number
  gn = grep --name-only

[core]
	excludesfile = ~/.gitignore
	autocrlf = input

[github]
	user = vladalive

[credential]
	helper = cache

[gist]
	private = yes

[grep]
	lineNumber = true
  patternType = extended

[diff]
	tool = vimdiff

[merge]
	tool = vimdiff

[mergetool]
	prompt = false
	keepBackup = false

[difftool]
	prompt = false

[push]
	default = current
[rebase]
	autosquash = true
